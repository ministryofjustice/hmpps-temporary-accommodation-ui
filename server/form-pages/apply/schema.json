{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "title": "Apply Schema",
  "additionalProperties": false,
  "required": [
    "basic-information",
    "oasys-import",
    "check-your-answers"
  ],
  "properties": {
    "basic-information": {
      "type": "object",
      "properties": {
        "sentence-type": {
          "type": "object",
          "properties": {
            "sentenceType": {
              "enum": [
                "bailPlacement",
                "communityOrder",
                "extendedDeterminate",
                "ipp",
                "life",
                "nonStatutory",
                "standardDeterminate"
              ],
              "type": "string"
            }
          }
        }
      }
    },
    "oasys-import": {
      "type": "object",
      "properties": {
        "optional-oasys-sections": {
          "type": "object",
          "properties": {
            "needsLinkedToReoffending": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "section": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "linkedToHarm": {
                    "type": "boolean"
                  },
                  "linkedToReOffending": {
                    "type": "boolean"
                  }
                }
              }
            },
            "otherNeeds": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "section": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "linkedToHarm": {
                    "type": "boolean"
                  },
                  "linkedToReOffending": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },
    "check-your-answers": {
      "type": "object",
      "properties": {
        "review": {
          "type": "object",
          "properties": {
            "reviewed": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}