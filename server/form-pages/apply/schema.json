{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "title": "Apply Schema",
  "additionalProperties": false,
  "required": [
    "basic-information",
    "check-your-answers"
  ],
  "properties": {
    "basic-information": {
      "type": "object",
      "properties": {
        "sentence-type": {
          "type": "object",
          "properties": {
            "sentenceType": {
              "enum": [
                "bailPlacement",
                "communityOrder",
                "extendedDeterminate",
                "ipp",
                "life",
                "nonStatutory",
                "standardDeterminate"
              ],
              "type": "string"
            }
          }
        }
      }
    },
    "check-your-answers": {
      "type": "object",
      "properties": {
        "review": {
          "type": "object",
          "properties": {
            "reviewed": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}