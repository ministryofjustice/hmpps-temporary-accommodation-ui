{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% if infoMessages %}
  {% for message in infoMessages %}
  
    {% if message is string %}
      {{ govukNotificationBanner({
        titleText: 'Important',
        html: '<div class="govuk-heading-s">' + (message | escape) + '</div>'
      }) }}
    {% else %}
      {{ govukNotificationBanner({
        titleText: 'Important',
        html: '<div class="govuk-heading-s">' + (message.title | escape) + '</div><p class="govuk-body">' + ((message.text | escape) if message.text else message.html) + '</p>'
      }) }}
    {% endif %}

  {% endfor %}
{% endif %}

{% if successMessages %}
  {% for message in successMessages %}

    {% if message is string %}
      {{ govukNotificationBanner({
        html: '<h3 class="govuk-!-margin-top-2">' + (message | escape) + '</h3>',
        type: 'success'
      }) }}
    {% else %}
      {{ govukNotificationBanner({
        html: '<h3 class="govuk-!-margin-top-2">' + (message.title | escape) + '</h3><p class="govuk-body">' + ((message.text | escape) if message.text else message.html) + '</p>',
        type: 'success'
      }) }}
    {% endif %}

  {% endfor %}
{% endif %}
