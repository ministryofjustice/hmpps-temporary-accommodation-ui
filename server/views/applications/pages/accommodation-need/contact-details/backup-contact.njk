{% extends "../../layout.njk" %}

{% block questions %}

    <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">{{ task.title }}</span>
        {{ page.title }}
    </h1>

    {{ formPageInput({
        fieldName: "name",
        label: {
            text: "Name"
        }
    }, fetchContext()) }}

    {{ formPageInput({
        fieldName: "phone",
        label: {
            text: "Phone number"
        }
    }, fetchContext()) }}

    {{ formPageInput({
        fieldName: "email",
        label: {
            text: "Email"
        }
    }, fetchContext()) }}

{% endblock %}
