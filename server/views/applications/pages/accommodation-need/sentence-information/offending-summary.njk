{% extends "../../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">
    <span class="govuk-caption-l">{{ section.title }}</span>
    {{ page.title }}
  </h1>

  <p>Summarise offences and behaviours that would be relevant to accommodation placements. This may include:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>any history of arson</li>
    <li>violent offences</li>
    <li>weapons</li>
  </ul>

  {{ formPageTextarea({
    fieldName: 'summary',
    label: {
      text: "Provide details",
      classes: "govuk-label--s"
    }
  }, fetchContext()) }}

{% endblock %}
