{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% extends "../../layout.njk" %}

{% block questions %}

  {% set pageTitleHTML %}
    <span class="govuk-caption-l">{{ task.title }}</span>
    {{ page.title }}
  {% endset %}

  {% set noHtml %}
    {% set html %}
      <h3 class="govuk-notification-banner__heading">CRS referral must be submitted before an application to CAS3 is made</h3>
      <p class="govuk-body">You can still submit your application</p>
    {% endset %}

    {{ govukNotificationBanner({
      html: html
    }) }}
  {% endset %}

  {{ formPageRadios({
    fieldName: "crsSubmitted",
    fieldset: {
      legend: {
        html: pageTitleHTML,
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    items: [
      {
        value: "yes",
        text: "Yes"
      },
      {
        value: "no",
        text: "No",
        conditional: {
          html: noHtml
        }
      }
    ]
  }, fetchContext()) }}

{% endblock %}
