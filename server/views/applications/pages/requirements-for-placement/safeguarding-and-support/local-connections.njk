{% from "govuk/components/details/macro.njk" import govukDetails %}
{% extends "../../layout.njk" %}

{% set buttonText = "Next" %}
{% set columnClasses = "govuk-grid-column-full" %}
{% block questions %}

  {% include "./partials/_navigation.njk" %}
  
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h2 class="govuk-!-margin-top-0  govuk-heading-m">Provide details of local connections</h3>
      <p>Include details of the person's support network and any positive factors of placement in a certain location. For example:</p>
      <ul>
        <li>family, including children</li>
        <li>friends</li>
      </ul>

      {{ formPageTextarea({
        fieldName: 'localConnections',
        label: {
          text: "Provide details",
          classes: "govuk-label--s"
        }
      }, fetchContext()) }}
      
    </div>
  </div>
{% endblock %}
