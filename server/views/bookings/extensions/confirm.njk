{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Extension confirmed" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
            titleText: "Booking extension complete"
            }) }}
            {{ govukSummaryList({
                rows: [
                   {
                    key: {
                        text: "Name"
                    },
                    value: {
                        text: person.name
                    }
                    },
                    {
                    key: {
                        text: "CRN"
                    },
                    value: {
                        text: person.crn
                    }
                    },
                    {
                    key: {
                        text: "Expected arrival date"
                    },
                    value: {
                        text: formatDate(arrivalDate)
                    }
                    },
                    {
                    key: {
                        text: "New expected departure date"
                    },
                    value: {
                        text: formatDate(departureDate)
                    }
                    }
                ]
            }) }}

            <p class="govuk-body">
                <a href="{{ paths.bookings.show({ premisesId: premisesId, bookingId: id }) }}">Back to dashboard</a>
            </p>
        </div>
    </div>
{% endblock %}
