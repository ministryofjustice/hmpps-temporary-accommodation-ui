{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% macro taCheckboxes(params, context) %}
  {{
    govukCheckboxes(
      mergeObjects(
        params,
        { id: params.fieldName, name: params.fieldName + "[]", errorMessage: context.errors[params.fieldName] }
      )
    )
  }}
{% endmacro %}
