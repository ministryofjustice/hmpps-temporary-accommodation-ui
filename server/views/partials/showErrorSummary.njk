{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% macro showErrorSummary(errorList, errorTitle) %}

  {% if errorList | length %}
    {{ govukErrorSummary({
      titleText: errorTitle if errorTitle else "There is a problem",
      errorList: errorList
    }) }}
  {% endif %}

{% endmacro %}
