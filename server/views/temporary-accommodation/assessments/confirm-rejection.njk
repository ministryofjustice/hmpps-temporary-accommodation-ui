{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../components/ta-radios/macro.njk" import taRadios %}
{% from "../../components/formFields/form-page-textarea/macro.njk" import formPageTextarea %}
{% from "../../components/formFields/form-page-select/macro.njk" import formPageSelect %}
{% from "../../partials/showErrorSummary.njk" import showErrorSummary %}

{% extends "../../partials/layout.njk" %}

{% set pageTitle = "Reject referral - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: paths.assessments.summary({ id: assessment.id })
    }) }}
{% endblock %}

{% block content %}
    {% set context = fetchContext() %}

    {{ showErrorSummary(errorSummary) }}

    <h1 class="govuk-heading-l">Reject {{ personName(assessment.application.person) }}'s referral</h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="{{ paths.assessments.reject({ id: assessment.id }) }}" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />


                {{ formPageSelect({
                    label: {
                        text: "Why are you rejecting this referral?",
                        classes: "govuk-label--m"
                    },
                    hint: {
                        text: 'This helps the organisation understand why CAS3 referrals are rejected.'
                    },
                    items: convertObjectsToSelectOptions(referralRejectionReasons, 'Select a reason', 'name', 'id', 'referralRejectionReasonId'),
                    fieldName: "referralRejectionReasonId",
                    attributes: {
                        "data-conditional-match-text": referralRejectionReasonOtherMatch
                    }
                }, context) }}

                <div id="referralRejectionReasonDetail-conditional" hidden>
                    {{ formPageTextarea({
                        fieldName: 'referralRejectionReasonDetail',
                        label: {
                            text: "Add details about why the referral is being rejected",
                            classes: "govuk-label--s"
                        }
                    }, context) }}
                </div>

                {{ taRadios(
                    {
                        fieldset: {
                        legend: {
                            text: "Did the probation practitioner ask for it to be withdrawn?",
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                        items: [
                        {
                            value: "yes",
                            text: "Yes",
                            checked: context.ppRequestedWithdrawal === 'yes'
                        },
                        {
                            value: "no",
                            text: "No",
                            checked: context.ppRequestedWithdrawal === 'no'
                        }
                    ],
                        fieldName: "ppRequestedWithdrawal"
                    }, context
                ) }}

                {{ govukButton({
                    text: "Save and continue",
                    preventDoubleClick: true
                }) }}

            </form>
        </div>
    </div>
    {% block extraScripts %}
    <script type="text/javascript" nonce="{{ cspNonce }}">
        document.addEventListener('DOMContentLoaded', () => {
            const select = document.getElementById('referralRejectionReasonId')
            const conditional = document.getElementById('referralRejectionReasonDetail-conditional')
            if (!select || !conditional) return
            const match = select.dataset.conditionalMatchText || ''
            const update = () => {
                const text = select.options[select.selectedIndex]?.text?.trim() || ''
                conditional.hidden = text !== match
            }
            select.addEventListener('change', update)
            update()
        })
    </script>
    {% endblock %}

{% endblock %}
